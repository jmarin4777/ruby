<div class="container">
    <h1 class="row display-4 justify-content-center">Editing <%= @dojo.branch %></h1>
    <hr>
    <div class="row justify-content-center my-2">
        <% if @errors %>
            <ul>
                <% @errors.each do |error| %>
                    <li class="red"><%= error %></li>
                <% end %>
            </ul>
        <% end %>
    </div>
    <form class="form" action="<%= dojo_path(@dojo.id) %>" method="POST">
        <input type="hidden" name="_method" value="patch">
        <input name="authenticity_token" value="<%= 
        form_authenticity_token %>" type='hidden'>
        <div class="row">
            <label class="col-sm-3" for="branch">Branch:</label>
            <input placeholder="<%= @dojo.branch %>" class="col-sm-6 form-control" type="text" name="dojo[branch]" id="branch">
        </div>
        <div class="row my-4">
            <label class="col-sm-3" for="street">Street</label>
            <input placeholder="<%= @dojo.street %>" class="col-sm-6 form-control" type="text" name="dojo[street]" id="street">
        </div>
        <div class="row my-4">
            <label class="col-sm-3" for="city">City:</label>
            <input placeholder="<%= @dojo.city %>" class="col-sm-6 form-control" type="text" name="dojo[city]" id="city">
        </div>
        <div class="row my-4">
            <label class="col-sm-3" for="state">State:</label>
            <input placeholder="<%= @dojo.state %>" class="col-sm-6 form-control" type="text" name="dojo[state]" id="state">
        </div>
        <div class="row my-4">
            <input class="offset-sm-3 col-sm-6 form-control btn btn-dark" type="submit" value="Update">
        </div>
    </form>
    <div class="row">
        <div class="col">
            <a href="<%= dojos_path %>">Home</a> |
            <a href="<%= dojo_path(@dojo.id) %>">Show</a>
        </div>
    </div>
</div>