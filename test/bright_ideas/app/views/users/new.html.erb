<div class="row">
    <div class="col">
        <h1 class="display-4 text-center">Register</h1>
        <form class="form" action="<%= users_path %>" method="POST">
            <input name="authenticity_token" value="<%= form_authenticity_token %>" type='hidden'>
            <div class="row my-4">
                <label class="col-sm-3" for="name">Name:</label>
                <input class="col-sm-6 form-control" type="text" name="user[name]" id="name">
            </div>
            <div class="row my-4">
                <label class="col-sm-3" for="username">Username:</label>
                <input class="col-sm-6 form-control" type="text" name="user[username]" id="username">
            </div>
            <div class="row my-4">
                <label class="col-sm-3" for="email">Email Address:</label>
                <input class="col-sm-6 form-control" type="text" name="user[email]" id="email">
            </div>
            <div class="row my-4">
                <label class="col-sm-3" for="password">Password:</label>
                <input class="col-sm-6 form-control" type="password" name="user[password]" id="password">
            </div>
            <div class="row my-4">
                <label class="col-sm-3" for="password_confirmation">Password Confirmation:</label>
                <input class="col-sm-6 form-control" type="password" name="user[password_confirmation]" id="password_confirmation">
            </div>
            <div class="row my-4">
                <input class="offset-sm-3 col-sm-6 form-control btn btn-dark" type="submit" value="Register">
            </div>
        </form>
    </div>
    <div class="col">
        <h1 class="display-4 text-center">Login</h1>
        <form class="form" action="/sessions" method="POST">
            <input name="authenticity_token" value="<%= form_authenticity_token %>" type='hidden'>
            <div class="row my-4">
                <label class="col-sm-3" for="email">Email Address:</label>
                <input class="col-sm-6 form-control" type="text" name="email" id="email">
            </div>
            <div class="row my-4">
                <label class="col-sm-3" for="password">Password:</label>
                <input class="col-sm-6 form-control" type="password" name="password" id="password">
            </div>
            <div class="row my-4">
                <input class="offset-sm-3 col-sm-6 form-control btn btn-dark" type="submit" value="Login">
            </div>
        </form>
    </div>
</div>
