<% content_for :left_column do %>
<h1 class="display-4 text-center">All Users</h1>
<table class="table">
    <thead>
        <th scope="col">First Name</th>
        <th scope="col">Last Name</th>
        <th scope="col">Favorite Language</th>
    </thead>
    <tbody>
        <% @users.each do |user| %>
            <tr>
                <td><%= user.first_name %></td>
                <td><%= user.last_name %></td>
                <td><%= user.fav_lang %></td>
            </tr>
        <% end %>
    </tbody>
</table>
<% end %>

<% content_for :right_column do %>
<h1 class="display-4 text-center">New User</h1>
<form class="form" action="/users" method="POST">
    <input name="authenticity_token" value="<%= 
    form_authenticity_token %>" type='hidden'>
    <div class="row no-gutters">
        <label class="col-sm-12" for="first_name">First Name:</label>
        <input class="col-sm-12 form-control" type="text" name="user[first_name]" id="first_name">
    </div>
    <div class="row no-gutters my-4">
        <label class="col-sm-12" for="last_name">Last Name:</label>
        <input class="col-sm-12 form-control" type="text" name="user[last_name]" id="last_name">
    </div>
    <div class="row no-gutters my-4">
        <label class="col-sm-12" for="fav_lang">Favorite Language:</label>
        <input class="col-sm-12 form-control" type="text" name="user[fav_lang]" id="fav_lang">
    </div>
    <div class="row no-gutters my-4">
        <input class="offset-sm-3 col-sm-6 form-control btn btn-dark" type="submit" value="Submit">
    </div>
</form>
<div class="row">
    <a href="/posts" class="offset-sm-3 col-sm-6 btn btn-primary">All Posts</a>
</div>
<% end %>
